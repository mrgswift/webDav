<?xml version="1.0" encoding="UTF-8"?>
<phpunit
  colors="false"
  strict="true"
  verbose="true"
  stopOnFailure="false"
  convertErrorsToExceptions="true"
  convertNoticesToExceptions="true"
  convertWarningsToExceptions="true"
  bootstrap="tests/bootstrap.php">

  <testsuites>
    <testsuite name="WebDav Test Suite">
      <directory>tests/mrgswift/</directory>
    </testsuite>
  </testsuites>

  <filter>
    <whitelist>
      <directory suffix=".php">src/mrgswift/</directory>
    </whitelist>
  </filter>
</phpunit>
